<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.help.TnCActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="18dp"
        android:orientation="vertical">

        <com.google.android.material.appbar.MaterialToolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/btn_arrow_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_arrow_back"
                app:tint="@color/md_theme_scrim" />

            <TextView
                style="@style/TextAppearance.Elvora.TitleMedium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_gravity="center"
                android:text="Terms &amp; Conditions"/>

        </com.google.android.material.appbar.MaterialToolbar>

        <View
            android:id="@+id/divider3"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="?android:attr/listDivider"
            android:backgroundTint="#000000"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/textView4"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            style="@style/TextAppearance.Elvora.BodySmallSemiBold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/dark_grey"
            android:text="Terms &amp; Conditions"
            android:layout_marginTop="20dp"
            android:textStyle="bold"/>

        <TextView
            style="@style/TextAppearance.Elvora.BodySmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#777777"
            android:text="These Terms &amp; Conditions govern your use of the ELVORA app, a service for renting and managing electric vehicle (EV) batteries. By downloading, accessing, or using this app, you agree to be bound by these Terms &amp; Conditions. If you do not agree to these terms, please do not use the app."
            />

        <TextView
            style="@style/TextAppearance.Elvora.BodySmallSemiBold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#777777"
            android:text="1. Definitions"
            android:textStyle="bold"/>


        <TextView
            android:id="@+id/tv_tnc_1"
            style="@style/TextAppearance.Elvora.BodySmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#777777"
            />

        <TextView
            style="@style/TextAppearance.Elvora.BodySmallSemiBold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#777777"
            android:text="2. Use of the App"
            android:textStyle="bold"/>


        <TextView
            android:id="@+id/tv_tnc_2"
            style="@style/TextAppearance.Elvora.BodySmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#777777"
            />
        <TextView
            style="@style/TextAppearance.Elvora.BodySmallSemiBold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#777777"
            android:text="3. Battery Rental"
            android:textStyle="bold"/>


        <TextView
            android:id="@+id/tv_tnc_3"
            style="@style/TextAppearance.Elvora.BodySmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#777777"
            />
        <TextView
            style="@style/TextAppearance.Elvora.BodySmallSemiBold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#777777"
            android:text="4. Battery Management"
            android:textStyle="bold"/>


        <TextView
            android:id="@+id/tv_tnc_4"
            style="@style/TextAppearance.Elvora.BodySmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#777777"
            />


        <TextView
            style="@style/TextAppearance.Elvora.BodySmallSemiBold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#777777"
            android:text="5. Fees and Payments"
            android:textStyle="bold"/>


        <TextView
            android:id="@+id/tv_tnc_5"
            style="@style/TextAppearance.Elvora.BodySmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#777777"
            />

        <TextView
            style="@style/TextAppearance.Elvora.BodySmallSemiBold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#777777"
            android:text="6. Limitation of Liability"
            android:textStyle="bold"/>


        <TextView
            android:id="@+id/tv_tnc_6"
            style="@style/TextAppearance.Elvora.BodySmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#777777"
            />

        <TextView
            style="@style/TextAppearance.Elvora.BodySmallSemiBold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#777777"
            android:text="7. Changes to the Terms &amp; Conditions"
            android:textStyle="bold"/>


        <TextView
            android:id="@+id/tv_tnc_7"
            style="@style/TextAppearance.Elvora.BodySmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#777777"
            />

        <TextView
            style="@style/TextAppearance.Elvora.BodySmallSemiBold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#777777"
            android:text="8. Governing Law"
            android:textStyle="bold"/>


        <TextView
            android:id="@+id/tv_tnc_8"
            style="@style/TextAppearance.Elvora.BodySmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#777777"
            />

        <TextView
            style="@style/TextAppearance.Elvora.BodySmallSemiBold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#777777"
            android:text="9. Account Termination"
            android:textStyle="bold"/>


        <TextView
            android:id="@+id/tv_tnc_9"
            style="@style/TextAppearance.Elvora.BodySmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#777777"
            />

        <TextView
            style="@style/TextAppearance.Elvora.BodySmallSemiBold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#777777"
            android:text="10. Contact Us"
            android:textStyle="bold"/>


        <TextView
            android:id="@+id/tv_tnc_10"
            style="@style/TextAppearance.Elvora.BodySmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#777777"
            />

    </LinearLayout>
</ScrollView>