<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="18dp"
    android:layout_marginTop="16dp"
    app:strokeWidth="0dp"
    app:cardElevation="4dp"
    android:backgroundTint="@color/white"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingHorizontal="20dp"
        android:paddingVertical="14dp"
        >

        <TextView
            android:id="@+id/tv_card_title"
            style="@style/TextAppearance.Elvora.BodyMedium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Contact Information"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/btn_edit_contact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_edit"
            app:layout_constraintBottom_toBottomOf="@+id/tv_card_title"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tv_card_title" />

        <View
            android:id="@+id/divider2"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginVertical="14dp"
            android:background="?android:attr/listDivider"
            android:backgroundTint="#000000"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_card_title" />

        <TextView
            android:id="@+id/tv_ai_title1"
            style="@style/TextAppearance.Elvora.BodyMedium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            tools:text="Full Name"
            android:textColor="@color/dark_grey"
            app:layout_constraintStart_toStartOf="@+id/divider2"
            app:layout_constraintTop_toBottomOf="@+id/divider2" />

        <TextView
            android:id="@+id/tv_ai_value1"
            style="@style/TextAppearance.Elvora.BodyMedium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@+id/divider2"
            app:layout_constraintTop_toBottomOf="@+id/tv_ai_title1"
            tools:text="Muhammad Althaaf Abqary" />

        <TextView
            android:id="@+id/tv_ai_title2"
            style="@style/TextAppearance.Elvora.BodyMedium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Email"
            android:layout_marginTop="10dp"
            android:textColor="@color/dark_grey"
            app:layout_constraintStart_toStartOf="@+id/divider2"
            app:layout_constraintTop_toBottomOf="@+id/tv_ai_value1" />

        <ImageView
            android:id="@+id/iv_verif"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_verify"
            android:layout_marginStart="4dp"
            android:layout_marginBottom="4dp"
            app:layout_constraintBottom_toBottomOf="@+id/tv_ai_title2"
            app:layout_constraintStart_toEndOf="@+id/tv_ai_title2"
            app:layout_constraintTop_toTopOf="@+id/tv_ai_title2" />

        <TextView
            android:id="@+id/tv_ai_value2"
            style="@style/TextAppearance.Elvora.BodyMedium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@+id/divider2"
            app:layout_constraintTop_toBottomOf="@+id/tv_ai_title2"
            tools:text="muhammad.abqary@mhs.unsoed.ac.id" />

        <TextView
            android:id="@+id/tv_ai_title3"
            style="@style/TextAppearance.Elvora.BodyMedium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Telephone Number"
            android:layout_marginTop="10dp"
            android:textColor="@color/dark_grey"
            app:layout_constraintStart_toStartOf="@+id/divider2"
            app:layout_constraintTop_toBottomOf="@+id/tv_ai_value2" />

        <TextView
            android:id="@+id/tv_ai_value3"
            style="@style/TextAppearance.Elvora.BodyMedium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@+id/divider2"
            app:layout_constraintTop_toBottomOf="@+id/tv_ai_title3"
            tools:text="+6285875814528" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>
